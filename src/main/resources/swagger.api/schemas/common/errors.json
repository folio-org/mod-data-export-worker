{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A set of errors",
  "Errors": {
    "type": "object",
    "properties": {
      "errors": {
        "description": "List of errors",
        "type": "array",
        "items": {
          "type": "object",
          "$ref": "error.json#/Error"
        }
      },
      "total_records": {
        "description": "Total number of errors",
        "type": "integer"
      }
    },
    "additionalProperties": false
  }
}
